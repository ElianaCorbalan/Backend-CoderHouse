<h1 class="text-center mt-5 mb-5 fw-bolder text-decoration-underline text-info">Tabla de productos</h1>

{{#if productos}}
<table class="table table-striped table-hover container mt-5">
    <thead>
        <tr>
            <th>#</th>
            <th>Producto</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
    </thead>
    <tbody>
        {{#each productos}}
        <tr>
            <th> {{ this.id }} </th>
            <th> {{ this.title }} </th>
            <th> {{ this.price }} </th>
            <th><img width="40" height="40" src={{ this.thumbnail }}></th>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<h4 class="text-center mt-5 mb-5 fw-bolder text-danger">No se encontraron resultados</h4>
{{/if}}